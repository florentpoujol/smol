{
    "name": "florentpoujol/simple-php-framework",
    "license": "MIT",
    "type": "project",
    "description": "A simple, bare-bones yet full featured PHP framework",
    "autoload": {
        "files": ["src/helpers.php"],
        "psr-4" : {
            "FlorentPoujol\\SimplePhpFramework\\" : "src/"
        }
    },
    "autoload-dev": {
        "files": ["src/helpers.php"],
        "psr-4" : {
            "Tests\\FlorentPoujol\\SimplePhpFramework\\" : "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "nyholm/psr7": "^1.4",
        "nyholm/psr7-server": "^1.0",
        "psr/container": "^1.1",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpstan/phpstan": "^0.12.99",
        "phpstan/phpstan-strict-rules": "^0.12.11",
        "phpunit/phpunit": "^9.5",
        "psr/http-client": "^1.0",
        "symfony/var-dumper": "^5.3"
    },
    "scripts": {
        "phpstan": "phpstan analyse -c phpstan.neon",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix -v --dry-run --diff"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
